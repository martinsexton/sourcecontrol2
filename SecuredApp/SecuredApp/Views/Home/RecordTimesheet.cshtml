                        <div class="row">
                            <div class="col-xs-12">
                                <button type="button" ng-disabled="timesheetForm.tuesdayStartTime.$invalid || timesheetForm.tuesdayEndTime.$invalid" class="btn btn-primary btn-sm" ng-click="recordTuesdayDetails()"><span class="glyphicon glyphicon-plus"></span></button>
                                <button type="submit" class="btn btn-primary btn-sm">Save</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
