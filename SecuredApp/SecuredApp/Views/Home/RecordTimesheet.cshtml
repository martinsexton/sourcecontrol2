<form ng-app="timeApp" name="timesheetForm" ng-controller="recordTimesheetController" ng-submit="saveTimesheet()" ng-cloak>
    <div class="container">
        <div class="panel panel-primary detailsbox">
            <div class="panel-heading">Record Timesheets For @User.Identity.Name</div>
            <div class="col-xs-12 text-center">
                <img ng-src="~/Content/Images/mon.png" ng-click="showMon()" />
                <img ng-src="~/Content/Images/tue.png" ng-click="showTue()" />
                <img ng-src="~/Content/Images/wed.png" ng-click="showWed()" />
                <img ng-src="~/Content/Images/thurs.png" ng-click="showThurs()" />
                <img ng-src="~/Content/Images/fri.png" ng-click="showFri()" />
                <img ng-src="~/Content/Images/sat.png" ng-click="showSat()" />
                <img ng-src="~/Content/Images/sun.png" ng-click="showSun()" />
            </div>
            <div class="row">
                <div class="col-xs-6">
                    <md-input-container>
                        <label>Engineer Name</label>
                        <input name="engineerName" ng-model="timesheet.engineerName" required>
                        <div ng-messages="timesheetForm.timesheet.engineerName.$error" ng-show="timesheetForm.timesheet.engineerName.$dirty">
                            <div ng-message="required">This is required!</div>
                            <div ng-message="md-maxlength">That's too long!</div>
                        </div>
                    </md-input-container>
                </div>
                <div class="col-xs-6">
                    <md-input-container>
                        <label>Week Ending</label>
                        <input type="date" class="form-control" id="weekEndDate" aria-describedby="weekEndDateHelp" ng-model="timesheet.weekEndDate" required>
                    </md-input-container>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <div ng-show="displayMonDetails">
                        <p class="h4">Monday</p>
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="col-xs-12" ng-repeat="md in mondayDetails">
                                    <p class="text-muted"><span class="glyphicon glyphicon-trash" ng-click="removeMondayDetails(md)"></span><em><small> Worked on {{md.ProjectName}} for {{md.dayEndTime - md.dayStartTime}} hours</small></em></p>
                                </div>
                            </div>
                        </div>
                        <div class="row" style="padding-bottom:20px">
                            <div class="col-xs-12" ng-show="mondayTotalHours>0">
                                <p><strong>Total Hours: {{mondayTotalHours}}</strong></p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-4">
                                <md-input-container>
                                    <label>Projects</label>
                                    <md-select ng-model="recordedMonday.ProjectName" ng-required="displayMonDetails">
                                        <md-option ng-repeat="p in projects" ng-value="p.Name">
                                            {{p.Name}}
                                        </md-option>
                                    </md-select>
                                </md-input-container>
                            </div>
                            <div class="col-xs-4">
                                <md-input-container>
                                    <label>Start Time</label>
                                    <input type="number" name="mondayStartTime" ng-model="recordedMonday.dayStartTime" ng-required="displayMonDetails">
                                </md-input-container>
                            </div>
                            <div class="col-xs-4">
                                <md-input-container>
                                    <label>End Time</label>
                                    <input type="number" name="mondayEndTime" ng-model="recordedMonday.dayEndTime" ng-required="displayMonDetails">
                                </md-input-container>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <button type="button" ng-disabled="timesheetForm.mondayStartTime.$invalid || timesheetForm.mondayEndTime.$invalid" class="btn btn-primary btn-sm" ng-click="recordMondayDetails()"><span class="glyphicon glyphicon-plus"></span></button>
                                <button type="submit" class="btn btn-primary btn-sm">Save</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <div ng-show="displayTueDetails">
                        <p class="h4">Tuesday</p>
