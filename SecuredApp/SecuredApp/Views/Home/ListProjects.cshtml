<div ng-app="postApp" ng-controller="listProjectsController" style="padding-top: 20px;">
    <div class="page-header">
        <h1><small>Projects</small></h1>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="list-group">
                    <div class="list-group">
                        <a href="#" class="list-group-item" ng-repeat="p in projects" ng-click="showDetails(p)">{{p.Name}}</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6 panel panel-primary">
                <div class="panel-heading">Details</div>
                <div class="panel-body">
                    <p class="text-info">Details</p>
                    Name: <p class="text-muted">{{item_details.Name | uppercase}}</p>
                    <br />
                    From Date: <p class="text-muted">{{item_details.StartDate | date}}</p>
                    <br />
                    Contact Number: <p class="text-muted">{{item_details.ContactNumber}}</p>
                    <br />
                    Details: <p class="text-muted">{{item_details.Details}}</p>
                </div>
            </div>
        </div>
    </div>
</div>
