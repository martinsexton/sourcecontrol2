<div class="page-header">
    <h1><small>New Project</small></h1>
</div>
<form ng-app="postApp" name="projectForm" ng-controller="postController" ng-submit="saveProject()" ng-cloak>
    <div class="container" style="padding-top: 20px;">
        <div class="row">
            <div class="col-md-6">
                <div class="row">
                    <div class="form-group">
                        <input type="text" class="form-control" id="projectName" aria-describedby="projectNameHelp" placeholder="Enter Name" ng-model="project.Name" required>
                        <small id="projectNameHelp" class="form-text text-muted">Enter the name of the project.</small>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <input type="date" class="form-control" id="fromDate" aria-describedby="fromDateHelp" ng-model="project.StartDate" required>
                        <small id="fromDateHelp" class="form-text text-muted">Enter start date of project</small>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <input type="tel" class="form-control" id="contactNumber" aria-describedby="contactNumberHelp" ng-model="project.ContactNumber" required>
                        <small id="contactNumberHelp" class="form-text text-muted">Contact Number For Project</small>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <textarea class="form-control" rows="5" id="details" aria-describedby="detailsHelp" ng-model="project.Details" required></textarea>
                        <small id="detailsHelp" class="form-text text-muted">Enter any details</small>
                    </div>
                </div>
            </div>
            <div class="col-md-6 panel panel-primary">
                <div class="panel-heading">Details</div>
                <div class="panel-body">
                    Name: <p class="text-muted">{{project.Name | uppercase}}</p>
                    <br />
                    From Date: <p class="text-muted">{{project.StartDate | date}}</p>
                    <br />
                    Contact Number: <p class="text-muted">{{project.ContactNumber}}</p>
                    <br />
                    Details: <p class="text-muted">{{project.Details}}</p>
                    <br />
                    <button class="btn btn-primary" ng-disabled="projectForm.$invalid">Save</button>
                </div>
            </div>
        </div>
    </div>
</form>