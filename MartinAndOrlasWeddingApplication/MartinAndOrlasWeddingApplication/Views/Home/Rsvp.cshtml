@model MartinAndOrlasWeddingApplication.Models.Guest

<div class="mainpicture"></div>
<p>Hi @User.Identity.Name, Hope you can come</p>

@using (Html.BeginForm())
{
    List<SelectListItem> listItems = new List<SelectListItem>();
    listItems.Add(new SelectListItem
    {
        Text = "Accepted",
        Value = "Accepted"
    });
    listItems.Add(new SelectListItem
    {
        Text = "Declined",
        Value = "Declined"
    });
    <div class="container-fluid">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Firstname, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.Firstname, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Firstname, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Surname, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.DropDownListFor(model => model.Status, listItems, "-- Select Status --")
                        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.HiddenFor(model => model.Id, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="checkbox" id="IncludeGuestCheckbox">
                        <label><input type="checkbox" value="IncludeGuest">Include Guest</label>
                    </div>
                    <hr />
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div id="Foo" class="collapse">
                        <div class="form-group">
                            @Html.LabelFor(model => model.RelatedGuest.Firstname, htmlAttributes: new { @class = "control-label col-md-2" })
                            @Html.EditorFor(model => model.RelatedGuest.Firstname, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.RelatedGuest.Firstname, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.RelatedGuest.Surname, htmlAttributes: new { @class = "control-label col-md-2" })
                            @Html.EditorFor(model => model.RelatedGuest.Surname, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.RelatedGuest.Surname, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.RelatedGuest.Status, htmlAttributes: new { @class = "control-label col-md-2" })
                            @Html.DropDownListFor(model => model.RelatedGuest.Status, listItems, "-- Select Status --")
                            @Html.ValidationMessageFor(model => model.RelatedGuest.Status, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.HiddenFor(model => model.RelatedGuest.Id, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

